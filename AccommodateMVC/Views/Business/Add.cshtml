@model AccommodateMVC.ViewModels.AddBusinessViewModel

@{
    ViewBag.Title = "New Public Entity";
}

<h1>Add New Business</h1>

<form asp-controller="Business" asp-action="Add" method="POST">

    <div class="form-group">
        <label asp-for="Name"></label>
        <input class="form-control" asp-for="Name"/>
        <span asp-validation-for="Name"></span>
    </div>

    <div class="form-group">
        <label asp-for="Address"></label>
        <input class="form-control" asp-for="Address" />
        <span asp-validation-for="Address"></span>
    </div>

    <div class="form-group">
        <label asp-for="Type"></label>
        <input class="form-control" asp-for="Type" />
        <span asp-validation-for="Type"></span>
    </div>

    <input type="submit" class="btn-primary" value="Add Business" />

</form>
